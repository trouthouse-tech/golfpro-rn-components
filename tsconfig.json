{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "declaration": true,
    "outDir": "lib/",
    "lib": ["es7"],
    "allowJs": true,
    "jsx": "react-native",
    "isolatedModules": true,
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true,
    "moduleResolution": "node", 
  },
  "files": ["./src/index.ts"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
